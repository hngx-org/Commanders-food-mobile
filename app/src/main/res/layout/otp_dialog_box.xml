<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OTP"
        android:textSize="40sp"
        android:textColor="#710193"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:id="@+id/txtotp"/>

    <TextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="A 6 digit OTP has been sent to your email
kindly check and enter the code."
        android:textColor="#87748C"
        android:textSize="18sp"
        android:id="@+id/txtcheck"
        android:layout_below="@+id/txtotp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearlayout"
        android:layout_below="@id/txtcheck"
        android:layout_marginTop="15dp"
        android:gravity="center">

        <EditText
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:background="@drawable/otp_custom"
            android:id="@+id/otp1" />
        <EditText
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:background="@drawable/otp_custom"
            android:id="@+id/otp2"
            android:layout_marginLeft="15dp"/>
        <EditText
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:background="@drawable/otp_custom"
            android:id="@+id/otp3"
            android:layout_marginLeft="15dp"/>
        <EditText
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:background="@drawable/otp_custom"
            android:id="@+id/otp4"
            android:layout_marginLeft="15dp"/>
        <EditText
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:background="@drawable/otp_custom"
            android:id="@+id/otp5"
            android:layout_marginLeft="15dp"/>
        <EditText
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:background="@drawable/otp_custom"
            android:id="@+id/otp6"
            android:layout_marginLeft="15dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend OTP"
        android:layout_below="@id/linearlayout"
        android:id="@+id/resendotp"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textColor="#87748C"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="300dp"
        android:layout_height="60dp"
        app:cornerRadius="10dp"
        android:text="Continue"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        app:backgroundTint="#7C149B"
        android:id="@+id/otp_received"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>